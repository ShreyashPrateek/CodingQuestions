package ArrayQues;

import java.util.Scanner;

public class ArraySum 
{
	// function to calculate sum
	int sum(int arr[],int size)
	{
		int sum = 0;
		for(int i=0 ; i<size ; i++)
		{
			sum += arr[i];
		}
		return sum;	
	}
	
	public static void main(String[] args) 
	{
        // Creating Scanner object for user input
		Scanner scan = new Scanner(System.in); 
		
		// User input size of array
		System.out.println("Enter size of array: ");
		int size = scan.nextInt();
		
		// User input array elements
		System.out.println("Enter Elements in an array ");
		int arr[]= new int [size];
		
		for(int i=0 ; i<size ; i++)
			arr[i]=scan.nextInt();
		
		// Creating object of class to call non-static method
		ArraySum s = new ArraySum();
		
		// Calling sum method and printing the result
		System.out.println("Sum is : "+s.sum(arr, size));
		
		
	}

}
