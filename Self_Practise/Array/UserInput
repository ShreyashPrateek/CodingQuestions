import java.util.Scanner;
//Take array input from user and printing the same array
public class Ar1 {

	public static void main(String[] args) 
	{
        // Creating Scanner object for user input
		Scanner sc = new Scanner(System.in);
		
        // User input size of array
		System.out.println("Enter Size of Array");
		int size = sc.nextInt(); // size of array
		
        // User input array elements
		System.out.println("Enter the array elements");
		int arr[] = new int [size]; // declaring array of given size
		
		for(int i = 0;i<size;i++) // loop to take array elements as input
		{
			arr[i]=sc.nextInt(); // storing user input in array
		}		
        // Printing the array elements
		System.out.println("Elements in array are : ");
		for(int i = 0;i<size;i++) // loop to print array elements
		{
			System.out.print(arr[i]+" "); // printing array elements
		}
	}
}
