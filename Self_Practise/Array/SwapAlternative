import java.util.Scanner;

public class SwapAlternative 
{
	// Method to swap alternative elements
	void swapAlt(int arr[], int size)
	{
		int temp=0;
		for(int i=0; i<size ; i+=2) // increment by 2 to access alternative elements
		{
			if(arr[i]<size)
			{
				temp = arr[i];
				arr[i] = arr[i+1];
				arr[i+1]= temp;
			}
		}
	}
	
	public static void main(String[] args) 
	{
        // Creating Scanner object for user input
		Scanner sc = new Scanner(System.in);
		
		// User input size of array
		System.out.println("Enter Size of Array");
		int size = sc.nextInt();
		
        // User input array elements
		System.out.println("Enter the array elements");
		int arr[] = new int [size];
		
		for(int i = 0;i<size;i++)
		{
			arr[i]=sc.nextInt();
		}		
		
        // Creating object of class to call non-static method
		SwapAlternative sa= new SwapAlternative();
		
        // Calling swapAlt method
		sa.swapAlt(arr, size);
		
        // Printing the swapped array
		System.out.println("Swapped Alternative array is :");
		for(int i=0;i<size;i++)
		{
			System.out.print(arr[i]+" ");
		}
		System.out.println(); // for new line

		sc.close(); // Closing the scanner object
	}

}
