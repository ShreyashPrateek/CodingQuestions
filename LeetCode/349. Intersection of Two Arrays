class Solution 
{
    public int[] intersection(int[] nums1, int[] nums2) 
    {
        Set<Integer> set1 = new HashSet<>(); // HashSet to store unique elements of nums1
        Set<Integer> result = new HashSet<>(); // HashSet to store the intersection result

        // Add elements of nums1 to set1
        for (int num : nums1) 
        {
            set1.add(num); // Adding elements of nums1 to set1 (HashSet automatically handles duplicates)
        }

        // Check elements of nums2 against set1 and add to result if present
        for (int num : nums2) 
        {
            if (set1.contains(num)) // If num is present in set1, it means it's an intersection element
            { 
                result.add(num); // Add to result set
            }
        }

        int[] intersection = new int[result.size()]; // Create an array to hold the intersection elements
        int i = 0;

        // Convert the result set to an array
        for (int num : result) 
        {
            intersection[i++] = num; // Add each element from result set to the intersection array
        }

        return intersection;
    }
}